{
	"version": "2.0.0",
        "configurations": [
        {
            "name": "Cortex-Debug Zephyr VSCode",
            "cwd": "${workspaceFolder:AppUnderDev}",
            "executable": "${workspaceFolder:AppUnderDev}/build/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "openocdPath": "${which openocd}/openocd",
            "servertype": "openocd",
            "interface": "swd",
            "device": "${config:prj.soc}",
            "targetId": "${config:prj.board}",
            "boardId": "1",
            "flattenAnonymous": true,
            "armToolchainPrefix": "arm-none-eabi",
            "armToolchainPath": "${env:GNUARMEMB_TOOLCHAIN_PATH}/bin",
            // "gdb_port": "6000",
            "svdFile": "${config:prj.socSVD}",
            "showDevDebugOutput": "none",
            "configFiles": [
                        "${config:prj.launchCfgDir}/boards/arm/${config:prj.board}/support/openocd.cfg"
                ]
        }
    ]
}
